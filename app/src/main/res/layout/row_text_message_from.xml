<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/imageViewChatMessageContactPhotoFrom"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/imageviewfotoperfilhome" />

    <TextView
        android:id="@+id/textViewChatMessageFrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:padding="8dp"
        android:textSize="15sp"
        android:background="@android:color/darker_gray"
        android:maxWidth="240dp"
        android:text="This is my message"
        app:layout_constraintEnd_toStartOf="@+id/imageViewChatMessageContactPhotoFrom"
        app:layout_constraintTop_toTopOf="@+id/imageViewChatMessageContactPhotoFrom" />

</androidx.constraintlayout.widget.ConstraintLayout>