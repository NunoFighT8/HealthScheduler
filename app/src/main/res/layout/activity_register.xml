<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splashfade"
    tools:context=".Register">

    <ImageView
        android:id="@+id/logoRegister"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logoregister" />

    <ImageView
        android:id="@+id/formularioRegister"
        android:layout_width="338dp"
        android:layout_height="313dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoRegister"
        app:srcCompat="@drawable/rectangleregister" />

    <TextView
        android:id="@+id/textViewEmailRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/roboto"
        android:textColor="#36BFB8"
        android:textSize="24sp"
        android:text="Email"
        app:layout_constraintStart_toStartOf="@+id/formularioRegister"
        app:layout_constraintTop_toTopOf="@+id/formularioRegister" />

    <EditText
        android:id="@+id/editTextEmailRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"
        android:ems="13"
        android:inputType="textPersonName"
        android:textColor="#36BFB8"
        android:textColorHighlight="#36BFB8"
        android:textColorHint="#36BFB8"
        android:textColorLink="#36BFB8"
        android:backgroundTint="#36BFB8"
        app:layout_constraintEnd_toEndOf="@+id/formularioRegister"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/formularioRegister"
        app:layout_constraintTop_toBottomOf="@+id/textViewEmailRegister" />

    <TextView
        android:id="@+id/textViewPasswordRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/roboto"
        android:textColor="#36BFB8"
        android:textSize="24sp"
        android:text="Password"
        app:layout_constraintStart_toStartOf="@+id/formularioRegister"
        app:layout_constraintTop_toBottomOf="@+id/editTextEmailRegister" />

    <EditText
        android:id="@+id/editTextPasswordRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="13"
        android:inputType="textPassword"
        android:textColor="#36BFB8"
        android:textColorHighlight="#36BFB8"
        android:textColorHint="#36BFB8"
        android:textColorLink="#36BFB8"
        android:backgroundTint="#36BFB8"
        app:layout_constraintEnd_toEndOf="@+id/formularioRegister"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="@+id/formularioRegister"
        app:layout_constraintTop_toBottomOf="@+id/textViewPasswordRegister" />

    <Button
        android:id="@+id/buttonRegister"
        android:layout_width="222dp"
        android:layout_height="56dp"
        android:background="@drawable/btlogin_login"
        android:text="Registar"
        android:textSize="24sp"
        android:fontFamily="@font/roboto"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="@+id/formularioRegister"
        app:layout_constraintEnd_toEndOf="@+id/formularioRegister"
        app:layout_constraintStart_toStartOf="@+id/formularioRegister"
        app:layout_constraintTop_toBottomOf="@+id/editTextPasswordRegister" />

    <ImageView
        android:id="@+id/imageViewHereYourFirstSetp"
        android:layout_width="121dp"
        android:layout_height="108dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="46dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/txtfraseregistar" />


</androidx.constraintlayout.widget.ConstraintLayout>