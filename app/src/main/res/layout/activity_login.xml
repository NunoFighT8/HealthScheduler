<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <ImageView
        android:id="@+id/imageViewLogin"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_login" />

    <ImageView
        android:id="@+id/imageViewFormularioLogin"
        android:layout_width="338dp"
        android:layout_height="313dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewLogin"
        app:srcCompat="@drawable/retangulo_formulario" />

    <TextView
        android:id="@+id/textViewEmailLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/roboto"
        android:text="Email"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/imageViewFormularioLogin"
        app:layout_constraintTop_toTopOf="@+id/imageViewFormularioLogin" />

    <TextView
        android:id="@+id/textViewPasswordLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/roboto"
        android:text="Password"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/imageViewFormularioLogin"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextEmailLogin" />

    <EditText
        android:id="@+id/editTextTextEmailLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:ems="13"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:fontFamily="@font/roboto"
        app:layout_constraintEnd_toEndOf="@+id/imageViewFormularioLogin"
        app:layout_constraintStart_toStartOf="@+id/imageViewFormularioLogin"
        app:layout_constraintTop_toBottomOf="@+id/textViewEmailLogin" />

    <EditText
        android:id="@+id/editTextTextPasswordLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:ems="13"
        android:inputType="textPassword"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:fontFamily="@font/roboto"
        app:layout_constraintEnd_toEndOf="@+id/imageViewFormularioLogin"
        app:layout_constraintStart_toStartOf="@+id/imageViewFormularioLogin"
        app:layout_constraintTop_toBottomOf="@+id/textViewPasswordLogin" />

    <Button
        android:id="@+id/buttonLoginLogin"
        android:layout_width="222dp"
        android:layout_height="56dp"
        android:background="@drawable/btlogin_login"
        android:text="Entrar"
        android:textSize="24sp"
        android:fontFamily="@font/roboto"
        android:textColor="#36BFB8"
        app:backgroundTint="#F6F6F6"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewFormularioLogin"
        app:layout_constraintEnd_toEndOf="@+id/imageViewFormularioLogin"
        app:layout_constraintStart_toStartOf="@+id/imageViewFormularioLogin"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPasswordLogin" />

    <Button
        android:id="@+id/btinfoLogin"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/btinfo"
        app:backgroundTint="#FFFFFF"
        app:backgroundTintMode="multiply"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imageViewTextAlreadyLogin"
        android:layout_width="121dp"
        android:layout_height="108dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="46dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/txtfraselogin" />

    <ImageView
        android:id="@+id/imageViewDividerLeft"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewFormularioLogin"
        app:srcCompat="@drawable/linhaverde" />

    <TextView
        android:id="@+id/textViewUseOtherMethods"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Outros metodos login"
        android:textColor="#21736F"
        android:textSize="18sp"
        android:fontFamily="@font/roboto"
        app:layout_constraintEnd_toStartOf="@+id/imageViewDividerRight"
        app:layout_constraintStart_toEndOf="@+id/imageViewDividerLeft"
        app:layout_constraintTop_toBottomOf="@+id/imageViewFormularioLogin" />

    <ImageView
        android:id="@+id/imageViewDividerRight"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewFormularioLogin"
        app:srcCompat="@drawable/linhaverde" />

    <ImageView
        android:id="@+id/imageViewGoogleLogin"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewUseOtherMethods"
        app:srcCompat="@drawable/google" />


</androidx.constraintlayout.widget.ConstraintLayout>